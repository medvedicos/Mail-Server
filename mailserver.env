# docker-mailserver configuration

# Enable/Disable services
ENABLE_CLAMAV=0
ENABLE_FAIL2BAN=1
ENABLE_POSTGREY=0
ENABLE_SPAMASSASSIN=1
ENABLE_FETCHMAIL=0
ENABLE_MANAGESIEVE=1
ENABLE_UPDATE_CHECK=1
ENABLE_SRS=0

# SSL Configuration
SSL_TYPE=manual
SSL_CERT_PATH=/etc/ssl/mail/cert.pem
SSL_KEY_PATH=/etc/ssl/mail/key.pem

# Dovecot Configuration
DOVECOT_MAILBOX_FORMAT=maildir
DOVECOT_TLS=yes

# Postfix Configuration
POSTFIX_INET_PROTOCOLS=ipv4
POSTMASTER_ADDRESS=admin@sutulaya.lol
OVERRIDE_HOSTNAME=mail.sutulaya.lol

# Authentication
PERMIT_DOCKER=network
ENABLE_SASLAUTHD=0

# Account management
ACCOUNT_PROVISIONER=FILE

# Misc
TZ=Europe/Moscow
LOG_LEVEL=info

# Dovecot quota
ENABLE_QUOTAS=1
POSTFIX_MESSAGE_SIZE_LIMIT=52428800

# Security
SPOOF_PROTECTION=1
MOVE_SPAM_TO_JUNK=1

# Network
NETWORK_INTERFACE=eth0

# DMS settings
DMS_DEBUG=0
SUPERVISOR_LOGLEVEL=info
ONE_DIR=1
DMS_VMAIL_UID=5000
DMS_VMAIL_GID=5000
