# Mail Server Configuration
# Copy this file to .env and customize for your installation

# Domain Configuration
MAIL_DOMAIN=sutulaya.lol
HOSTNAME=mail.sutulaya.lol

# Database Configuration
POSTGRES_DB=mailserver
POSTGRES_USER=mailuser
POSTGRES_PASSWORD=changeme_strong_password_here

# Postfix Configuration
POSTFIX_HOSTNAME=mail.sutulaya.lol
POSTFIX_DOMAIN=sutulaya.lol

# Roundcube Configuration
ROUNDCUBE_DEFAULT_HOST=ssl://dovecot
ROUNDCUBE_SMTP_SERVER=tls://postfix
ROUNDCUBE_PRODUCT_NAME=Sutulaya Mail

# SSL/TLS Configuration
# Set to 'letsencrypt' for automatic certificates or 'selfsigned' for testing
SSL_TYPE=letsencrypt
SSL_EMAIL=admin@sutulaya.lol

# Timezone
TZ=Europe/Moscow

# Web Interface Port
WEBMAIL_PORT=8080

# Security Settings
ENABLE_FAIL2BAN=1
ENABLE_CLAMAV=0
ENABLE_SPAMASSASSIN=1

# Admin Email (for system notifications)
ADMIN_EMAIL=admin@sutulaya.lol
